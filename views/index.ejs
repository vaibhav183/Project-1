<body>
    <div class="row main" id="login-section">
        <div class="div1 animate__animated animate__backInLeft" id="login-section1">
            <img src="image/login.png" width="20%" height="20%" style="margin-top: 8%;">
            <h2>Login Here!!</h2>
            <hr>
            <h6>"I will always welcome joyfully any opportunity that comes my way to be of service to you"</h6>
            <p>If You Don't Have Any Account</p>
            <button id="signupp" type="button" class="btn btn-success btn-lg" style="margin-top: 0.6rem;">Register Here</button>
        </div>
        <div class="div2 animate__animated animate__backInRight" id="login-section2">
            <p>To Keep Connected With Us Please Login With Your Personal Information By Username And Password</p>
            <hr>
            <p style="text-align: center;color: red;">
                <%=wrongDetail%>
            </p>
            <div class="row" style="width: 100%;height: 55%;display: flex;justify-content: center;align-items: center;">
                <div style="width: 28%;height: 100%;display: inline-block">
                    <img id="imag1" src="image/rocket.png">
                    <p>Wait For Login!!</p>
                </div>
                <div style="width: 70%;height: 100%;display: inline-block;background-color: powderblue;">
                    <h6 style="margin-top: 0.2em;">Enter Your Credentials Here</h6>
                    <form class="form1" action="/login" method="POST">
                        <!-- class="i1 fa fa-envelope icon"  class="i2 fa fa-key icon" -->
                        <div class="form-outline">
                            <!-- <i class="fa fa-envelope icon"></i> -->
                            <input type="email" id="username" name="email1" class="form-control form-control-lg" required/>
                            <label class="form-label" for="typeEmail">Enter Your Email </label>
                        </div>
                        <div class="form-outline" style="margin-top: 0.8rem;">
                            <!-- <i class="fas fa-user prefix"></i> -->
                            <input type="password" id="password" name="pass1" class="form-control form-control-lg" required/>
                            <label class="form-label" for="typePassword">Enter Your Password</label>
                        </div>
                        <!-- <button type="button" class="btn btn-primary btn-lg">Login</button> -->
                        <button type="submit" id="log-btn" class="btn btn-success btn-lg" style="margin-top: 0.8rem;">Login</button>
                    </form>
                </div>
            </div>
            <!-- <div style="margin-top: 1.5em;">
                <p>Or You Can Login With </p>
                <a href="#!" role="button"><i class="fab fa-google fa-fw fa-2x"></i></a>
                <a href="#!" role="button"><i class="fab fa-facebook fa-fw fa-2x"></i></a>
            </div> -->
        </div>
    </div>






    <div class="row main2 container" id="register-section">
        <div class="div3 animate__animated animate__backInLeft" id="register-section1">
            <img src="/image/logo.png" width="20%" height="20%" style="margin-top: 10%;">
            <h2>Sign UP</h2>
            <hr>
            <p>If You Already Have An Account, Login Here</p>
            <button type="button" class="btn btn-success btn-lg" id="loginbtn" style="margin-top: 0.8rem;">Login</button>
        </div>

        <div class="div4 container animate__animated animate__backInRight" id="register-section2">
            <h6 id="sec-2" style="text-align: center;color: red;"></h6>
            <form class="form2" id="addUserForm" action="/signup" method="POST" autocomplete="off">
                <div class="row">
                    <div class="col-6">
                        <input type="text" autocomplete="off" name="fname" class="form-control" placeholder="First name*" required>
                        <input type="text" class="form-control field" name="mname" placeholder="Middle Name">
                        <input type="text" class="form-control field" name="lname" placeholder="Last name*">
                        <input type="email" class="form-control field" id="colFormLabel" name="emailname" placeholder="Email*" autocomplete="email" required>
                        <input type="password" class="form-control field" id="pass3" name="passw1" placeholder="Password*" required>
                        <input type="password" class="form-control field" id="pass4" name="passw2" placeholder="Confirm Password*" required>
                        <input type="Number" class="form-control field" id="colFormLabel" placeholder="Mobile Number*" name="mobile" autocomplete="one-time-code" required/>
                        <fieldset class="field">
                            <select class="form-control dropdown" id="education" name="education" required>
                        <option value="" selected="selected" disabled="disabled">-- Education* --</option>
                        <option value="No formal education">No formal education</option>
                        <option value="Primary education">Primary education</option>
                        <option value="Secondary education">Secondary education or high school</option>
                        <option value="GED">GED</option>
                        <option value="Vocational qualification">Vocational qualification</option>
                        <option value="Bachelor's degree">Bachelor's degree</option>
                        <option value="Master's degree">Master's degree</option>
                        <option value="Doctorate or higher">Doctorate or higher</option>
                      </select>
                        </fieldset>
                    </div>

                    <div class="col-6">
                        <textarea class="form-control" pl id="exampleFormControlTextarea1" rows="2" name="addres" placeholder="Address*...." required></textarea>
                        <input type="text" class="form-control field" name="date" placeholder="Date Of Birth(dd/mm/yyyy)" onfocus="(this.type='date')" required>
                        <input type="text" class=" col-5 form-control field" name="pin" autocomplete="" placeholder="Pin Code*" id="zip" required>
                        <input type="text" class="col-6 form-control field" name="city" placeholder="City*" id="city">
                        <input type="text" class="form-control field" name="state" placeholder="State*" id="state">
                        <input type="text" class="form-control field" name="country" placeholder="Country*" id="country">
                        <input type="text" class="form-control field" name="desig" placeholder="Designation*">
                        <!-- <label for="formFileMultiple" class="form-label field" style="display: none;"></label>
                        <input class="form-control field" type="file" id="formFileMultiple" multiple /> -->
                    </div>
                    <button type="submit" class="btn btn-success btn-lg" id="signup-btn" style="margin-top: 0.8rem;">Register</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
