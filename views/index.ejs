    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <script>
        var signinn = document.getElementById("login-section");
        var signn1 = document.getElementById("login-section1");
        var signn2 = document.getElementById("login-section2");
        var signuppp = document.getElementById("register-section");
        var signuppp1 = document.getElementById("register-section1");
        var signuppp2 = document.getElementById("register-section2");
        $("#signupp").click(function() {
            $(signn1).delay(200).queue(function(next) {
                $(this).addClass("animate__animated animate__backOutLeft");
                next();
            });
            // $(signn1).addClass("");
            $(signn2).addClass("animate__animated animate__backOutRight");
            $(signn1).delay(600).fadeOut();
            $(signn2).delay(600).fadeOut();
            $(signinn).delay(800).queue(function(next) {
                $(this).css("display", "none");
                next();
            });
            $(signuppp).delay(800).queue(function(next) {
                $(this).css("display", "flex");
                next();
                $(signn1).removeClass("animate__animated animate__backOutLeft");
                $(signn2).removeClass("animate__animated animate__backOutRight");
                $(signn1).fadeIn();
                $(signn2).fadeIn();
                $(signn1).addClass("animate__animated animate__backInLeft");
                $(signn2).addClass("animate__animated animate__backInRight");
            });

        });

        $("#loginbtn").click(function() {
            $(signuppp1).delay(100).queue(function(next) {
                $(this).addClass("animate__animated animate__backOutLeft");
                next();
            });
            // $(signn1).addClass("");
            $(signuppp2).addClass("animate__animated animate__backOutRight");
            $(signuppp1).delay(600).fadeOut();
            $(signuppp2).delay(600).fadeOut();

            $(signuppp).delay(800).queue(function(next) {
                $(this).css("display", "none");
                next();
            });
            $(signinn).delay(800).queue(function(next) {
                $(this).css("display", "flex");
                next();
                $(signuppp1).removeClass("animate__animated animate__backOutLeft");
                $(signuppp2).removeClass("animate__animated animate__backOutRight");
                $(signuppp1).fadeIn();
                $(signuppp2).fadeIn();
                $(signuppp1).addClass("animate__animated animate__backInLeft");
                $(signuppp2).addClass("animate__animated animate__backInRight");
            });
        });

        $("#zip").keyup(function() {
            var el = $(this);
            if (el.val().length === 6) {
                $.ajax({
                    url: "https://api.postalpincode.in/pincode/" + el.val(),
                    cache: false,
                    dataType: "json",
                    type: "GET",
                    data: "zip=" + el.val(),
                    success: function(result, success) {
                        console.log(result[0].PostOffice[0].State);
                        $("#city").val(result[0].PostOffice[0].District);
                        $("#state").val(result[0].PostOffice[0].State);
                        $("#country").val(result[0].PostOffice[0].Country);
                    }
                });
            }
        });

        $('#signup-btn').click(function() {
            if ($('#pass3').val() != $('#pass4').val()) {
                $('#sec-2').text("Password didn't match");
                return false;
            }
        })


